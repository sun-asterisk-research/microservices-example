[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js,json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{go,mk}]
indent_size = 4
indent_style = tab

[Makefile]
indent_size = 4
indent_style = tab

[*.rs]
indent_size = 4
indent_style = space
